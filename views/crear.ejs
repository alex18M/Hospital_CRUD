<%- include("template/cabecera", {tituloWeb: 'Registrar Paciente'}) %>

    <div class="container">
        <h1>Crear</h1>

        <form action="/pacientes" class="my-2" method="POST">
    
            <input 
                type="text"
                placeholder="Ingrese Nombre"
                class="form-control my-2"
                name="nombre"
            >
        
            <input 
                type="text"
                placeholder="Ingresela Edad"
                class="form-control my-2"
                name="edad"
            >

            <input 
                type="text"
                placeholder="Ingrese Historial"
                class="form-control my-2"
                name="historial"
            >

            <input 
                type="text"
                placeholder="Ingrese el medicamento"
                class="form-control my-2"
                name="madicamento"
            >
        
            <button
                type="submit"
                class="btn btn-dark btn-block"
            >
                Agregar
            </button>
        
        </form>
    </div>

  
   

